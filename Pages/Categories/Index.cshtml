@page
@model DiasInventory.Pages.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">New Category</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-hover table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th scope="col">
                    Category Name
                </th>
                <th scope="col">
                    Display Order
                </th>
                <th scope="col">
                    Created Date
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Categories)
            {
                    <tr class="table-light">
                        <td>
                        @obj.Name
                        </td>
                        <td>
                        @obj.DisplayOrder
                        </td>
                        <td>
                        @obj.CreatedDate
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2">Edit</a>
                                <a asp-page="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>